<Window x:Class="SongTextAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Song Text Analyzer" Height="1000" Width="800">
    <Grid Margin="10">
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Load File Label -->
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Top" FontSize="15">Load File:</TextBlock>

                <!-- Path Label -->
                <Label Content="Path" Grid.Row="1" Grid.Column="0" Margin="0,10,0,10" VerticalAlignment="Center"/>
                
                <!-- Path TextBox -->
                <TextBox x:Name="PathTextBox" 
                         Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="0,10,10,10" 
                         Width="180" 
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         HorizontalContentAlignment="Left" />

                <!-- Load Button -->
                <Button x:Name="LoadButton" 
                        Grid.Row="1" 
                        Grid.Column="2" 
                        Width="60" 
                        Height="20" 
                        Margin="0,10,0,10"
                        VerticalAlignment="Center"
                        Content="Load"
                        Click="LoadButton_Click"/>

                <!-- TextBox for Full Song Text -->
                <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Height="300" Margin="0,10,0,15" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" x:Name="FullSongTextBox"/>

                <!-- Add Song Label -->
                <TextBlock Grid.Row="3"  Grid.Column="0" Margin="5,0,0,15" VerticalAlignment="Center" FontSize="15">Add Song:</TextBlock>
                
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"  Orientation="Horizontal">
                <!-- Song Name -->
                <TextBlock Grid.Row="4" Width="70" Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Song Name:</TextBlock>
                <TextBox Grid.Row="4"  Grid.Column="1"
                         Width="150" 
                         Height="20" 
                         Margin="5" 
                         VerticalAlignment="Top" HorizontalAlignment="Left" Name="SongNameTextBox"/>
                </StackPanel>
                
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"  Orientation="Horizontal">
                <!-- Composers' Names -->
                <TextBlock Width="70"  Margin="5" VerticalAlignment="Center">Composers:</TextBlock>
                <ListBox Width="150" Margin="5" Name="ComposersListBox"/>
                <Button x:Name="AddComposerButton" 
                        Width="60" 
                        Height="20" 
                        Margin="5" 
                        VerticalAlignment="Top"
                        Content="Add"
                        Click="AddComposerButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"  Orientation="Horizontal">
                    <!-- Writers' Names -->
                    <TextBlock Width="70" Margin="5" VerticalAlignment="Center">Writers:</TextBlock>    
                    <ListBox Width="150" Margin="5" Name="WritersListBox"/>
                    <Button x:Name="AddWriterButton" 
                            Width="60" 
                            Height="20" 
                            Margin="5" 
                            VerticalAlignment="Top"
                            Content="Add"
                            Click="AddWriterButton_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"  Orientation="Horizontal">
                    <!-- Performers' Names -->
                    <TextBlock Width="70" Margin="5" VerticalAlignment="Center">Performers:</TextBlock>
                    <ListBox Width="150"  Margin="5" Name="PerformersListBox"/>
                    <Button x:Name="AddPerformerButton" 
                            Width="60" 
                            Height="20" 
                            Margin="5" 
                            VerticalAlignment="Top"
                            Content="Add"
                            Click="AddPerformerButton_Click"/>
                </StackPanel>
              

                <!-- Save Button -->
                <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top"
                        Margin="5" HorizontalAlignment="Left" Width="50" Height="25" Name="SaveButton" Click="SaveButton_Click">Save</Button>
                
                <!-- Query Songs Label -->
                <TextBlock Grid.Row="3" Grid.Column="2" Margin="5,0,0,15" VerticalAlignment="Center" FontSize="15">Query Songs:</TextBlock>

                <!-- Query Song Name -->
                <TextBlock Grid.Row="4" Grid.Column="2" Margin="5" VerticalAlignment="Center">Song Name:</TextBlock>
                <TextBox Grid.Row="4" Grid.Column="3" Margin="5" Name="QuerySongNameTextBox"/>

                <!-- Query Composer -->
                <TextBlock Grid.Row="5" Grid.Column="2" Margin="5" VerticalAlignment="Center">Composer:</TextBlock>
                <TextBox Grid.Row="5" Grid.Column="3" Margin="5" Name="QueryComposerTextBox"/>

                <!-- Query Writer -->
                <TextBlock Grid.Row="6" Grid.Column="2" Margin="5" VerticalAlignment="Center">Writer:</TextBlock>
                <TextBox Grid.Row="6" Grid.Column="3" Margin="5" Name="QueryWriterTextBox"/>

                <!-- Query Performer -->
                <TextBlock Grid.Row="7" Grid.Column="2" Margin="5" VerticalAlignment="Center">Performer:</TextBlock>
                <TextBox Grid.Row="7" Grid.Column="3" Margin="5" Name="QueryPerformerTextBox"/>

                <!-- Query Button -->
                <Button Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" VerticalAlignment="Top"
                        Margin="5" HorizontalAlignment="Left" Width="50" Height="25" Name="QueryButton" Click="QueryButton_Click">Query</Button>

                <!-- DataGrid for Query Results with Border -->
                <Border Grid.Row="10" Grid.Column="0" Height="300" Grid.ColumnSpan="4" Margin="5" BorderBrush="Black" BorderThickness="1">
                    <DataGrid x:Name="QueryResultsDataGrid" AutoGenerateColumns="True" Margin="5"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>