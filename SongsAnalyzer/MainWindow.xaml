<Window x:Class="SongTextAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Song Text Analyzer" Height="450" Width="400">
    <Grid Margin="10">
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Top" FontSize="15">Load File:</TextBlock>

                <!-- Path Label -->
                <Label Content="Path" Grid.Row="1" Grid.Column="0" Margin="0,10,0,15" VerticalAlignment="Center"/>
                
                <!-- Path TextBox -->
                <TextBox x:Name="PathTextBox" 
                         Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="0,10,10,15" 
                         Width="180" 
                         VerticalAlignment="Center"
                         HorizontalAlignment="Left"
                         HorizontalContentAlignment="Left" />

                <!-- Load Button -->
                <Button x:Name="LoadButton" 
                        Grid.Row="1" 
                        Grid.Column="2" 
                        Width="60" 
                        Height="20" 
                        Margin="0,10,0,15"
                        VerticalAlignment="Center"
                        Content="Load"
                        Click="LoadButton_Click"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="5,0,0,15" VerticalAlignment="Center" FontSize="15">Add Song:</TextBlock>
                
                <!-- Song Name -->
                <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center">Song Name:</TextBlock>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="5" Name="SongNameTextBox"/>

                <!-- Composers' Names -->
                <TextBlock Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center">Composers:</TextBlock>
                <ListBox Grid.Row="4" Grid.Column="1" Margin="5" Name="ComposersListBox"/>
                <Button x:Name="AddComposerButton" 
                        Grid.Row="4" 
                        Grid.Column="2" 
                        Width="60" 
                        Height="20" 
                        Margin="5" 
                        VerticalAlignment="Top"
                        Content="Add"
                        Click="AddComposerButton_Click"/>

                <!-- Writers' Names -->
                <TextBlock Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center">Writers:</TextBlock>
                <ListBox Grid.Row="5" Grid.Column="1" Margin="5" Name="WritersListBox"/>
                <Button x:Name="AddWriterButton" 
                        Grid.Row="5" 
                        Grid.Column="2" 
                        Width="60" 
                        Height="20" 
                        Margin="5" 
                        VerticalAlignment="Top"
                        Content="Add"
                        Click="AddWriterButton_Click"/>

                <!-- Performers' Names -->
                <TextBlock Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center">Performers:</TextBlock>
                <ListBox Grid.Row="6" Grid.Column="1" Margin="5" Name="PerformersListBox"/>
                <Button x:Name="AddPerformerButton" 
                        Grid.Row="6" 
                        Grid.Column="2" 
                        Width="60" 
                        Height="20" 
                        Margin="5" 
                        VerticalAlignment="Top"
                        Content="Add"
                        Click="AddPerformerButton_Click"/>

                <!-- Save Button -->
                <Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top"
                        Margin="5" HorizontalAlignment="Left" Width="50" Height="25" Name="SaveButton" Click="SaveButton_Click">Save</Button>
            </Grid>
        </Border>
    </Grid>
</Window>
