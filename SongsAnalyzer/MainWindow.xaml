<Window x:Class="SongsAnalyzer.AddSongWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Song Text Analyzer" Height="950" Width="1250" Loaded="Window_Loaded">
    <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal">
                <StackPanel Width="380">

                    <!-- Load File Btn -->
                    <Button Click="BrowseSong_Click" Margin="0,10,200,10" Padding="5,5,5,5" VerticalAlignment="Center" FontSize="15">Browse File:</Button>
                <StackPanel MinWidth="30"   Margin="0,5,0,5">
                    <!-- Add Song Label -->

                    <StackPanel   Orientation="Horizontal" Margin="0">
                        <!-- Song Name -->
                        
                        <TextBlock   MinWidth="100" Margin="0,0,5,0" VerticalAlignment="Center"  HorizontalAlignment="Left">Song Name:</TextBlock>
                        <Border Background="White" BorderBrush="Black" BorderThickness="1,1,1,1" Margin="5">
                            <TextBlock   
 MinWidth="250" 
 Height="20" 
 Margin="5" 
 VerticalAlignment="Top" HorizontalAlignment="Left" Name="SongNameTextBox"/>
                        </Border>
                        
                    </StackPanel>

                    <StackPanel     Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="2">
                        <!-- Composers' Names -->
                        <TextBlock MinWidth="100" Margin="0,0,5,0" VerticalAlignment="Center">Composers:</TextBlock>
                        <ListBox Width="210" Margin="5" Height="100" ScrollViewer.CanContentScroll="True" Name="ComposersListBox"/>
                        <Button x:Name="AddComposerButton" 
Padding="3"
Margin="5" 
VerticalAlignment="Top"
Content="Add"
Click="AddComposerButton_Click"/>
                    </StackPanel>

                    <StackPanel     Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="2">
                        <!-- Writers' Names -->
                        <TextBlock MinWidth="100" Margin="0,0,5,0" VerticalAlignment="Center">Writers:</TextBlock>
                        <ListBox Width="210" Margin="5" Name="WritersListBox" Height="98" />
                        <Button x:Name="AddWriterButton" 
Padding="3"
Margin="5" 
    VerticalAlignment="Top"
    Content="Add"
    Click="AddWriterButton_Click"/>
                    </StackPanel>

                    <StackPanel     Orientation="Horizontal" Margin="0,0,0,0">
                        <!-- Performers' Names -->
                        <TextBlock MinWidth="100" Margin="0,0,5,0" VerticalAlignment="Center">Performers:</TextBlock>
                        <ListBox Width="210"  Margin="5" Height="100" Name="PerformersListBox"/>
                        <Button x:Name="AddPerformerButton" 
Padding="3"
Margin="5" 
    VerticalAlignment="Top"
    Content="Add"
    Click="AddPerformerButton_Click"/>
                    </StackPanel>


                    <!-- Save Button -->
                    <Button   VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Left" Padding="5"  Name="AddSongButton" Click="AddSongButton_Click">Save Song Details</Button>

                </StackPanel>

                    
                <!-- TextBox for Full Song Text -->
                <TextBox Height="370" Width="380" HorizontalAlignment="Left"  Margin="0,0,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" IsReadOnly="True" x:Name="FullSongTextBox"/>
                
              
                    
            </StackPanel>
                <StackPanel Margin="10,0,0,0" Width="380">
                    <!-- Query Songs Label -->
                    <TextBlock   Margin="0,0,0,5" VerticalAlignment="Center" FontSize="15"  Height="20">Query Songs:</TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <!-- Query Song Name -->
                    <TextBlock  VerticalAlignment="Center" MinWidth="100" MinHeight="20" >Song Name:</TextBlock>
                        <TextBox    MinWidth="250"  Name="QuerySongNameTextBox"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <!-- Query Composer -->
                    <TextBlock   Margin="0,0,0,0" VerticalAlignment="Center" MinWidth="100" MinHeight="20" >Composer:</TextBlock>
                    <TextBox   Margin="0,0,0,0"  MinWidth="250"  Name="QueryComposerTextBox"/>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <!-- Query Writer -->
                    <TextBlock   Margin="0,0,0,0" VerticalAlignment="Center" MinWidth="100" MinHeight="20">Writer:</TextBlock>
                    <TextBox   Margin="0,0,0,0"  MinWidth="250"  Name="QueryWriterTextBox"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <!-- Query Performer -->
                    <TextBlock   Margin="0,0,0,0" VerticalAlignment="Center" MinWidth="100" MinHeight="20">Performer:</TextBlock>
                    <TextBox   Margin="0,0,0,0"  MinWidth="250"  Name="QueryPerformerTextBox"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <!-- Query Performer -->
                    <TextBlock   Margin="0,0,0,0" VerticalAlignment="Center" MinWidth="100" MinHeight="20">Free Text:</TextBlock>
                    <TextBox   Margin="0,0,0,0"  MinWidth="250"  Name="QueryWordsTextBox"/>
                    </StackPanel>
                    
                    <!-- Query Button -->
                    <Button   VerticalAlignment="Center" Margin="0,5,0,5" HorizontalAlignment="Left" MinWidth="70" MinHeight="25" Name="QueryButton" >Query</Button>

                <TextBlock   Margin="0,5,0,5" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" FontSize="15" >Songs Results:</TextBlock>

                <!-- DataGrid for Query Results with Border -->
                    <Border    Margin="0,0,0,0" BorderBrush="Black" BorderThickness="1">
                        <DataGrid Height="230" x:Name="QueryResultsDataGrid" AutoGenerateColumns="True" Margin="0"/>
                    </Border>

                    <StackPanel Margin="0,5,0,5" Orientation="Vertical">
                    <TextBlock FontSize="15" HorizontalAlignment="Left">Words:</TextBlock>
                    <Border    Margin="0,0,0,0" BorderBrush="Black" BorderThickness="1">
                            <DataGrid Height="230" x:Name="WordsDataGrid" AutoGenerateColumns="True" Margin="0"/>
                        </Border>
                    </StackPanel>
                    
                </StackPanel>
            <StackPanel Margin="10,0,0,0" Width="380">
                <StackPanel Margin="0,0,0,5" Orientation="Vertical">
                    <TextBlock FontSize="15" Margin="0,0,0,5" HorizontalAlignment="Left">Words Index:</TextBlock>
                    <TextBlock HorizontalAlignment="Left">Filter By Group:</TextBlock>
                    <ListBox SelectionMode="Multiple" Height="100" Margin="0,5,0,5" Width="200" HorizontalAlignment="Left"/>
                    <Border    Margin="0,0,0,5" BorderBrush="Black" BorderThickness="1">
                        <DataGrid Height="150" x:Name="WordsIndexDataGrid" AutoGenerateColumns="True" Margin="0"/>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <!-- Add Song Label -->
                    <TextBlock    Margin="0,0,0,0" VerticalAlignment="Center" FontSize="15" Height="20">Define A Group:</TextBlock>

                    <StackPanel     Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="2">
                        <!-- Song Name -->
                        <TextBlock  Width="70"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Name:</TextBlock>
                        <TextBox   
Width="150" 
Height="20" 
Margin="5" 
VerticalAlignment="Top" HorizontalAlignment="Left" Name="GroupNameTextBox"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock  Width="70"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Values:</TextBlock>
                        <ListBox Width="150"  Margin="5" Name="GroupValuesListBox"/>
                        <Button x:Name="AddGroupValueButton" 
Width="60" 
Height="20" 
Margin="5" 
VerticalAlignment="Top"
Content="Add"
Click="AddPerformerButton_Click"/>
                    </StackPanel>
                    <!-- Save Button -->
                    <Button   VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Left" Width="50" Height="25" Name="SaveGroupButton" Click="AddSongButton_Click">Save</Button>
                </StackPanel>
                <StackPanel Margin="0,5,0,5">
                    <!-- Add Song Label -->
                    <TextBlock    Margin="0,0,0,5" VerticalAlignment="Center" FontSize="15" Height="20">Define A Phrase:</TextBlock>

                    <StackPanel     Orientation="Horizontal" Margin="0,0,0,0" Grid.RowSpan="2">
                        <!-- Song Name -->
                        <TextBlock  Width="70"  Margin="0" VerticalAlignment="Center" HorizontalAlignment="Left">Phrase:</TextBlock>
                        <TextBox   
Width="270" 
Height="20" 
Margin="5" 
VerticalAlignment="Top" HorizontalAlignment="Left" Name="PhraseNameTextBox"/>
                    </StackPanel>


                    <!-- Save Button -->
                    <Button   VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Left" Width="50" Height="25" Name="SavePhraseButton" Click="AddSongButton_Click">Save</Button>

                    <TextBlock HorizontalAlignment="Left">Filter By Phrase:</TextBlock>
                    <ListBox SelectionMode="Multiple" Height="100" Margin="0,5,0,5" Width="200" HorizontalAlignment="Left"/>

                    <StackPanel Margin="0,0,0,5" HorizontalAlignment="Stretch">
                        <TextBlock FontSize="15" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Stats:</TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Number of symbols per word:</TextBlock>
                            <TextBlock x:Name="Stats_PerWord" MinWidth="100"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Number of symbols per line:</TextBlock>
                            <TextBlock x:Name="Stats_PerLine" MinWidth="100" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Number of symbols per stanza:</TextBlock>
                            <TextBlock x:Name="Stats_PerStanza" MinWidth="100" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left">Number of symbols per song:</TextBlock>
                            <TextBlock x:Name="Stats_PerSong" MinWidth="100" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
            </StackPanel>
    </StackPanel>
</Window>